{
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"noEmit": true,
		"incremental": true,

		"module": "ES2022",
		"target": "ES2022",

		"jsx": "react-jsx",
		"moduleResolution": "Node10",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,

		"strictNullChecks": true,
		"strict": true,
		"strictFunctionTypes": false
	},
  "exclude": ["dist/"]
}
